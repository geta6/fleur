{
  "private": true,
  "scripts": {
    "build": "wsrun --exclude-missing --serial -c prepublishOnly"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "cross-env": "5.2.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.1",
    "prettier": "1.18.2",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.3",
    "wsrun": "5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
